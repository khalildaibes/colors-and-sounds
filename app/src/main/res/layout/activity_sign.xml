<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.black_000.myapplication.SignActivity"
    android:background="@drawable/background1">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="register"
            android:id="@+id/add"
            android:onClick="add_person_sign"
            android:layout_marginTop="42dp"
            android:layout_below="@+id/ephone"
            android:layout_alignRight="@+id/ephone"
            android:layout_alignEnd="@+id/ephone"
            android:layout_marginRight="59dp"
            android:layout_marginEnd="59dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ename"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="31dp"
            android:textColorHint="#ffff"
            android:hint="enter your first name"
            android:textColor="#ffff" />

        <EditText
            android:textColorHint="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/ephone"
            android:hint="your phone number"
            android:autoText="false"
            android:maxLength="9"
            android:layout_below="@+id/editText"
            android:layout_alignLeft="@+id/epassword"
            android:layout_alignStart="@+id/epassword"
            android:textColor="#ffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/lastname"
            android:textColorHint="#ffff"
            android:hint="enter your last name"
            android:layout_below="@+id/ename"
            android:layout_alignLeft="@+id/ename"
            android:layout_alignStart="@+id/ename"
            android:textColor="#ffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/username"
            android:hint="enter a Password"
            android:textColorHint="#ffff"
            android:layout_below="@+id/epassword"
            android:layout_alignLeft="@+id/lastname"
            android:layout_alignStart="@+id/lastname"
            android:inputType="textPassword"
            android:textColor="#ffff" />

        <EditText
            android:layout_width="wrap_content"
            android:textColorHint="#ffff"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/epassword"
            android:hint="enter a username"
            android:layout_below="@+id/lastname"
            android:layout_alignLeft="@+id/username"
            android:layout_alignStart="@+id/username"
            android:textColor="#ffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textWebEmailAddress|textPersonName"
            android:ems="10"
            android:id="@+id/mail"
            android:textColorHint="#ffff"
            android:hint="enter your mail"
            android:layout_below="@+id/username"
            android:layout_alignLeft="@+id/username"
            android:layout_alignStart="@+id/username"
            android:textColor="#ffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_below="@+id/mail"
            android:textColorHint="#ffff"
            android:layout_alignLeft="@+id/mail"
            android:layout_alignStart="@+id/mail"
            android:hint="counrty code"
            android:maxLength="5"
            android:textColor="#ffff" />



</RelativeLayout>
