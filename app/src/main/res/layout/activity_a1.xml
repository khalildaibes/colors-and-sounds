<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.black_000.myapplication.A1Activity"
    android:contextClickable="true"
    android:background="@drawable/soundbg">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play sound"
        android:id="@+id/button"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:onClick="play1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="129dp"
        android:background="#282727"
        android:textColor="#fcf9f9" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dog"
            android:id="@+id/chekin2"
            android:layout_above="@+id/chekin"
            android:layout_alignLeft="@+id/chekin"
            android:layout_alignStart="@+id/chekin"
            android:checked="false"
            android:textSize="28dp"
            android:textColor="#f8fc00" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chiken"
            android:id="@+id/chekin"
            android:layout_above="@+id/chiken1"
            android:layout_alignLeft="@+id/chiken1"
            android:layout_alignStart="@+id/chiken1"
            android:checked="false"
            android:layout_alignParentEnd="true"
            android:textColor="#f8fc00"
            android:textSize="28dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lion"
            android:id="@+id/chiken1"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:layout_marginBottom="48dp"
            android:checked="false"
            android:textColor="#f8fc00"
            android:textSize="28dp" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check"
        android:id="@+id/check"
        android:onClick="checks"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
