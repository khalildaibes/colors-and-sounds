<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.black_000.myapplication.A2Activity"
    android:background="@drawable/soundbg">

    <RelativeLayout
        tools:context="com.example.black_000.myapplication.A1Activity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:contextClickable="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="play sound"
            android:id="@+id/button2"
            android:textSize="@dimen/abc_action_bar_progress_bar_size"
            android:onClick="play1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="141dp"
            android:background="#282727"
            android:textColor="#fcf9f9" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/radioGroup"
            android:layout_below="@+id/button2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cow"
                android:id="@+id/radioButton3"
                android:checked="false"
                android:layout_below="@+id/radioGroup"
                android:layout_alignLeft="@+id/Elephan"
                android:layout_alignStart="@+id/Elephan"
                android:layout_marginTop="39dp"
                android:textColor="#f8fc00"
                android:textSize="28dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tigger"
                android:id="@+id/radioButton2"
                android:checked="false"
                android:layout_below="@+id/radioButton3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#f8fc00"
                android:textSize="28dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elephant"
                android:id="@+id/Elephan"
                android:checked="false"
                android:layout_below="@+id/radioButton2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#f8fc00"
                android:textSize="28dp" />

        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="check"
            android:id="@+id/button3"
            android:onClick="check"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</RelativeLayout>
