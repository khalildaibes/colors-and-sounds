<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.black_000.myapplication.M10Activity"
    android:background="@drawable/colorsbg">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="MOVE to sound game "
            android:id="@+id/moveon"
            android:layout_gravity="right|bottom"
            android:layout_weight="0.27"
            android:onClick="Go_to_hard"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="71dp"
            android:text="MENU"
            android:id="@+id/menu"
            android:layout_gravity="center_horizontal|bottom"
           android:onClick="Go_to_menu" />

        <Button
            android:layout_width="106dp"
            android:layout_height="74dp"
            android:text="RESTART"
            android:id="@+id/restart"
            android:layout_gravity="left|bottom"
            android:onClick="Restart"/>

        <ImageView
            android:layout_width="290dp"
            android:layout_height="290dp"
            android:id="@+id/imageView9"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/logo"
            android:focusable="false"
            style="@style/Base.Theme.AppCompat.Light.DialogWhenLarge" />

    </FrameLayout>

</RelativeLayout>
